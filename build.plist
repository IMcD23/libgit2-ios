<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>name</key>
    <string>libgit2-ios</string>
    <key>url</key>
    <string>https://github.com/IMcD23/libgit2-ios.git</string>
    <key>library</key>
    <dict>
        <key>url</key>
        <string>https://github.com/libgit2/libgit2.git</string>
        <key>branch</key>
        <string>master</string>
    </dict>
    <key>dependencies</key>
    <array>
        <dict>
            <key>url</key>
            <string>https://github.com/IMcD23/openssl-ios.git</string>
            <key>branch</key>
            <string>master</string>
        </dict>
        <dict>
            <key>url</key>
            <string>https://github.com/IMcD23/libssh2-ios.git</string>
            <key>branch</key>
            <string>master</string>
        </dict>
        <dict>
            <key>url</key>
            <string>https://github.com/IMcD23/libcurl-ios.git</string>
            <key>branch</key>
            <string>master</string>
        </dict>
    </array>
    <key>libraryOutputs</key>
	<array>
		<string>libgit2</string>
	</array>
    <key>buildSystem</key>
    <string>cmake</string>
    <key>buildArgs</key>
    <array>
        <string>-DBUILD_SHARED_LIBS=OFF</string>
        <string>-DBUILD_CLAR=OFF</string>
        <string>-DTHREADSAFE=ON</string>
        <string>-DCURL=ON</string>
        <string>-DUSE_HTTPS=OpenSSL</string>
        <string>-DHAVE_LIBSSH2_MEMORY_CREDENTIALS=ON</string>
        <string>-DHAVE_FUTIMENS=OFF</string>
    </array>
</dict>
</plist>